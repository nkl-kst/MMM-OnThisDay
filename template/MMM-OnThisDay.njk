{# Wrapper #}
<div class="{{ config.textSize }}" style="max-width: {{ config.maxWidth }};">

    {% if events | length > 0 %}

        {% if config.reverseOrder %}
            {% set events = events | reverse %}
        {% endif %}

        {% if config.maxEvents %}
            {% set events = events.slice(0, config.maxEvents) %}
        {% endif %}

        <ul>
            {% for event in events %}
                <li>{{ event }}</li>
            {% endfor %}
        </ul>

    {% else %}

        {# No data #}
        {{ 'TEXT_NODATA' | translate }}

    {% endif %}

</div>
